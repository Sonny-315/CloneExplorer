<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:based="clr-namespace:CloneExplorer.Support.UI.Units;assembly=CloneExplorer.Support"
                    xmlns:views="clr-namespace:CloneExplorer.Forms.UI.Views"
                    xmlns:units="clr-namespace:CloneExplorer.Forms.UI.Units">

    <Style
        TargetType="{x:Type views:ExplorerWindow}"
        BasedOn="{StaticResource {x:Type based:DarkWindow}}">
        <Setter Property="Content">
            <Setter.Value>
                <StackPanel>
                    <TextBlock Text="{Binding TestTitle}" Foreground="#FFFFFF"/>
                    <units:FolderTreeView>
                        <units:FolderTreeItem Header="dimohy"/>
                        <units:FolderTreeItem Header="vincent"/>
                        <units:FolderTreeItem Header="rkttu"/>
                    </units:FolderTreeView>
                </StackPanel>

            </Setter.Value> 
        </Setter>
    </Style>

</ResourceDictionary>